# Dockerfile.prod (backend)
# 1️⃣ Build stage
FROM golang:1.23.8 AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o server ./cmd/server

# 2️⃣ Run stage (smaller base image)
FROM gcr.io/distroless/base-debian12

WORKDIR /app
COPY --from=builder /app/server .

EXPOSE 4000
CMD ["./server"]
